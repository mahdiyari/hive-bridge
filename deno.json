{
  "tasks": {
    "start": "deno run --env-file --allow-env --allow-net --allow-read --allow-ffi src/main.ts",
    "dev": "deno run --watch --env-file --allow-env --allow-net --allow-read --allow-ffi src/main.ts"
  },
  "imports": {
    "@noble/curves": "jsr:@noble/curves@^1.8.1",
    "@noble/hashes": "jsr:@noble/hashes@^1.7.1",
    "@oak/oak": "jsr:@oak/oak@^17.1.4",
    "@std/assert": "jsr:@std/assert@1",
    "@std/uuid": "jsr:@std/uuid@^1.0.5",
    "ethereumjs-util": "npm:ethereumjs-util@^7.1.5",
    "ethers": "npm:ethers@^6.13.5",
    "hive-tx": "npm:hive-tx@^6.1.1",
    "selfsigned": "npm:selfsigned@^2.4.1"
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "semiColons": false,
    "singleQuote": true,
    "useTabs": true
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  }
}
