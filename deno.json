{
  "tasks": {
    "start": "deno run --env-file --allow-env --allow-net --allow-read --allow-ffi src/main.ts",
    "dev": "deno run --watch --env-file --allow-env --allow-net --allow-read --allow-ffi src/main.ts"
  },
  "imports": {
    "@noble/secp256k1": "jsr:@noble/secp256k1@^2.3.0",
    "@oak/oak": "jsr:@oak/oak@^17.1.4",
    "@std/assert": "jsr:@std/assert@1",
    "@std/uuid": "jsr:@std/uuid@^1.0.5",
    "@wevm/viem": "jsr:@wevm/viem@^2.31.0",
    "hive-tx": "npm:hive-tx@^6.1.3"
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "semiColons": false,
    "singleQuote": true,
    "useTabs": true
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  }
}
